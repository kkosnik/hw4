<% if @current_user %>

<h1>New Post from <%= Place.all.where({id: request.query_parameters["place_id"]})[0].name%></h1>

<%= form_with model: @post do |form| %>
  <p>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
  </p>
  <p>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
  </p>
  <p>
    <%= form.label "posted_on" %>
    <%= form.date_field "posted_on" %>
  </p>
    <%= form.label "uploaded_image", class: "form-label" %>
    <%= form.file_field "uploaded_image", accept: "image/png,image/jpg,image/jpeg", class: "form-control" %>
  <p>
    <%= form.submit %>
  </p>
  <p>
  <%= form.hidden_field "place_id" %>
  </p>
<% end %>

<% else %>
  <p> You must <a href="/sessions/new">log in</a> to view this page </p>
<% end %>

