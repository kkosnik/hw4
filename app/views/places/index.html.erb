<% if @current_user %>
  <div class="col-sm-3 mt-2 mb-2 text-left">
      <a href="/places/new/" class="btn btn-success">New Place</a>
  </div>

<h1>Places I've Visited</h1>
<ul>
  <% for place in @places %>
    <li><a href="/places/<%= place.id %>"><%= place.name %></a></li>
  <% end %>
</ul>

<p>
  <a href="/places/new">New place</a>
</p>

<% else %>

<p> Please <a href="/sessions/new">log in</a> to start your travel journey </p> </p>

<% end %>